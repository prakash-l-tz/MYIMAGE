<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_love_gradient">
    <!-- ðŸ”¹ TOP BAR -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:navigationIcon="@drawable/ic_back"
        app:title="RESET PIN"
        app:titleCentered="true"
        app:titleTextAppearance="@style/ToolbarTitleBold"
        app:titleTextColor="@android:color/white" />
    <!-- CENTER CARD -->
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_love_card"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- ICON -->
        <ImageView
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/pass" />

        <!-- TITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Reset PIN ðŸ”"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- SUBTITLE -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Verify with Google to continue"
            android:textColor="#666666"
            android:textSize="14sp" />

        <!-- GOOGLE SIGN IN -->
        <Button
            android:id="@+id/btnGoogleSignIn"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#FFFFFF"
            android:text="Sign in with Google"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textStyle="bold" />

        <!-- NEW PIN -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_pin_box"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <EditText
                android:id="@+id/etNewPin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@id/btnTogglePin"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="New PIN"
                android:importantForAutofill="no"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/btnTogglePin"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:src="@drawable/eye_invisible" />
        </RelativeLayout>

        <!-- CONFIRM PIN -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_pin_box"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <EditText
                android:id="@+id/etConfirmPin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@id/btnTogglePins"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:hint="Confirm PIN"
                android:importantForAutofill="no"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/btnTogglePins"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="2dp"
                android:src="@drawable/eye_invisible" />
        </RelativeLayout>

        <!-- SAVE BUTTON -->
        <Button
            android:id="@+id/btnSavePin"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/bg_love_button_secondary"
            android:text="Save New PIN ðŸ’–"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>
