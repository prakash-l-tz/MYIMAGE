<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#FFFFFF">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change PIN ðŸ”"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="24dp" />

    <!-- New PIN -->
    <EditText
        android:id="@+id/etNewPin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter New PIN"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
       />

    <!-- Confirm PIN -->
    <EditText
        android:id="@+id/etConfirmPin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Confirm New PIN"
        android:inputType="numberPassword"
        android:maxLength="4"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginBottom="24dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSavePin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Save New PIN âœ…"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/bg_love_button_secondary" />

</LinearLayout>
